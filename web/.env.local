# Environment Variables for AI Agentic Crypto Browser

# WalletConnect Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# RPC Provider Keys (Optional - will fallback to public RPCs)
NEXT_PUBLIC_INFURA_KEY=your_infura_key_here
NEXT_PUBLIC_ALCHEMY_KEY=your_alchemy_key_here
NEXT_PUBLIC_QUICKNODE_KEY=your_quicknode_key_here

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# App Configuration
NEXT_PUBLIC_APP_NAME="AI Agentic Crypto Browser"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION="AI-powered web browser with Web3 integration and DeFi capabilities"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PWA=true

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG=true

# =============================================================================
# SOLANA INTEGRATION
# =============================================================================

# Solana Network Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_WS_URL=wss://api.devnet.solana.com

# Jupiter DEX Aggregator
NEXT_PUBLIC_JUPITER_API_URL=https://quote-api.jup.ag/v6

# Magic Eden NFT Marketplace
NEXT_PUBLIC_MAGIC_EDEN_API_URL=https://api-mainnet.magiceden.dev/v2

# Tensor NFT Marketplace
NEXT_PUBLIC_TENSOR_API_URL=https://api.tensor.trade

# =============================================================================
# EXTERNAL APIS
# =============================================================================

# CoinGecko API
NEXT_PUBLIC_COINGECKO_API_URL=https://api.coingecko.com/api/v3

# DeFiLlama API
NEXT_PUBLIC_DEFILLAMA_API_URL=https://api.llama.fi

# =============================================================================
# TRADING & MARKET DATA
# =============================================================================

# Binance Configuration (Testnet for development)
NEXT_PUBLIC_BINANCE_TESTNET=true
NEXT_PUBLIC_BINANCE_BASE_URL=https://testnet.binance.vision
NEXT_PUBLIC_BINANCE_WS_URL=wss://testnet.binance.vision/ws

# TradingView Configuration
NEXT_PUBLIC_TRADINGVIEW_BASE_URL=https://www.tradingview.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Solana Features
NEXT_PUBLIC_ENABLE_SOLANA_DEFI=true
NEXT_PUBLIC_ENABLE_SOLANA_NFT=true
NEXT_PUBLIC_ENABLE_SOLANA_STAKING=true
NEXT_PUBLIC_ENABLE_SOLANA_SWAPS=true

# Trading Features
NEXT_PUBLIC_ENABLE_ALGORITHMIC_TRADING=true
NEXT_PUBLIC_ENABLE_SOCIAL_TRADING=true
NEXT_PUBLIC_ENABLE_COPY_TRADING=true
NEXT_PUBLIC_ENABLE_ADVANCED_ORDERS=true

# Institutional Features (Disabled in development)
NEXT_PUBLIC_ENABLE_PRIME_BROKERAGE=false
NEXT_PUBLIC_ENABLE_COMPLIANCE_REPORTING=false
NEXT_PUBLIC_ENABLE_RISK_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_INSTITUTIONAL_API=false

# Security Features
NEXT_PUBLIC_ENABLE_MFA=true
NEXT_PUBLIC_ENABLE_FRAUD_DETECTION=true
NEXT_PUBLIC_ENABLE_KYC_VERIFICATION=false
NEXT_PUBLIC_ENABLE_SECURITY_MONITORING=true

# Fiat Features (Disabled in development)
NEXT_PUBLIC_ENABLE_FIAT_ONRAMP=false
NEXT_PUBLIC_ENABLE_FIAT_OFFRAMP=false
NEXT_PUBLIC_ENABLE_BANK_INTEGRATION=false
NEXT_PUBLIC_ENABLE_PAYMENT_PROCESSING=false

# Launchpad Features
NEXT_PUBLIC_ENABLE_LAUNCHPAD=true
NEXT_PUBLIC_ENABLE_PROJECT_SUBMISSION=true
NEXT_PUBLIC_ENABLE_VESTING_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_INVESTOR_KYC=false

# Terminal Features
NEXT_PUBLIC_ENABLE_TERMINAL=true
NEXT_PUBLIC_TERMINAL_WS_URL=ws://localhost:8081

# =============================================================================
# DEMO/DEVELOPMENT CONFIGURATION
# =============================================================================

# Demo Mode (for development without real API keys)
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_USE_MOCK_DATA=true
NEXT_PUBLIC_ENABLE_PAPER_TRADING=true
