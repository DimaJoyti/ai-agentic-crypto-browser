# Development Environment Configuration for Faster UI Performance
# This file is automatically loaded in development mode

# Performance Optimizations
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT_PLUGIN=true
FAST_REFRESH=true

# Development API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_ENVIRONMENT=development

# Disable heavy features in development
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_ENABLE_HOTJAR=false

# Development Feature Flags
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true
NEXT_PUBLIC_SKIP_PREFLIGHT=true

# Faster builds
NEXT_PUBLIC_DISABLE_SOURCEMAPS=true
NEXT_PUBLIC_DISABLE_MINIFICATION=true

# Mock data for faster development
NEXT_PUBLIC_USE_MOCK_DATA=true
NEXT_PUBLIC_MOCK_DELAY=100

# Development-only features
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=true
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=true

# Disable expensive operations
NEXT_PUBLIC_DISABLE_ANIMATIONS=false
NEXT_PUBLIC_REDUCE_MOTION=false
NEXT_PUBLIC_DISABLE_TRANSITIONS=false

# Cache settings for development
NEXT_PUBLIC_CACHE_STRATEGY=memory
NEXT_PUBLIC_CACHE_TTL=300

# Development logging
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=true
