# NPM Configuration for CI/CD environments
# This file helps resolve npm cache issues in GitHub Actions and other CI systems

# Disable audit and fund messages in CI
audit=false
fund=false

# Use offline mode when possible
prefer-offline=true

# Disable progress bar in CI
progress=false

# Set log level to reduce noise
loglevel=error

# Cache configuration for CI environments
# The cache path will be overridden by environment variables in CI
cache=/tmp/.npm

# Disable package-lock.json updates in CI
package-lock=false

# Timeout settings
fetch-timeout=300000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Registry settings
registry=https://registry.npmjs.org/

# Security settings
strict-ssl=true
